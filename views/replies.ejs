<div class="replies">
	<div class="message-list">
		<% for (let reply of message.replies) { %>
			<%- include('message', {
				message: reply,
				context: context
			}) %>
		<% } %>
	</div>
	<form action="/api/send" method="post" class="reply-form">
		<input type="hidden" name="in_reply_to" value="<%= message.id %>">
		<input type="hidden" name="context_id" value="<%= context.id %>">
		<textarea id="content" name="content" cols="80" rows="3" placeholder="donâ€™t forget what happened to the person who suddenly got everything they always wanted."></textarea>
		<input type="submit" value="Send reply">
		<div class="response"></div>
	</form>
</div>
